<?xml version="1.0" encoding="UTF-8"?>
<web-app version="6.0" xmlns="https://jakarta.ee/xml/ns/jakartaee">
    <display-name>Comic</display-name>
    <resource-ref>
        <res-ref-name>jdbc/ComicDB</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
    </resource-ref>
    <filter>
        <filter-name>CorsFilter</filter-name>
        <filter-class>reader.site.Comic.servlet.CorsFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>CorsFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <servlet>
        <servlet-name>PostApiServlet</servlet-name>
        <servlet-class>reader.site.Comic.servlet.api.PostApiServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>PostApiServlet</servlet-name>
        <url-pattern>/api/posts/*</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>CommentApiServlet</servlet-name>
        <servlet-class>reader.site.Comic.servlet.api.CommentApiServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CommentApiServlet</servlet-name>
        <url-pattern>/api/comments/*</url-pattern>
    </servlet-mapping>
</web-app>
